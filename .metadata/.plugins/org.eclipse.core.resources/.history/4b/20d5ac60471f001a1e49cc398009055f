		f.setTitle("카드결제");
		JPanel NewWindowMember = new JPanel();
		f.setLayout(new BorderLayout());
		NewWindowMember.setLayout(null);
		NewWindowMember.setBackground(new Color(26,44,91));
		f.setContentPane(NewWindowMember);

